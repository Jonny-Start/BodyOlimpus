<!-- Errors -->
<% if(typeof errors !="undefined" && errors.length> 0){ %>
    <ul class="list-group">
      <% for (let i=0; i < errors.length; i++) { %>
        <li class="list-group-item list-group-item-danger errorNotification">
          <span class="contentText-list-group">
            <i class="fa-regular fa-circle-xmark icon-list-group"></i>
            <p class="text-list-group">
              <%= errors[i] %>
            </p>
          </span>
          <i class="fa-solid fa-xmark icon-list-group"></i>
        </li>
      <% } %>
    </ul>
<% } %>
   
  <!-- Success -->
<% if(typeof success !="undefined" && success.length> 0){ %>
    <ul class="list-group">
      <% for (let j=0; j < success.length; j++) { %>
        <li class="list-group-item list-group-item-success successNotification">
          <span class="contentText-list-group">
            <i class="fa-regular fa-circle-check icon-list-group"></i>
            <p class="text-list-group">
              <%= success[j] %>
            </p>
          </span>
          <i class="fa-solid fa-xmark icon-list-group"></i>
        </li>
      <% } %>
    </ul>
<% } %>